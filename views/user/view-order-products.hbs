 <section>
        <div class="container mt-5 ">
        <div class="row">
            {{#each products}}


            <div class="col-md-3 col-6  p-3 ">
                <a href=""><div class="card border-0" style="width: 15rem; height:30rem;">
  <img class="card-img-top" 
    src="/product-images/{{this.product._id}}.jpg"
    style = "height:18rem;width:15rem;"></a>
  <div class="card-body">
    <h5 class="card-title">{{this.product.Name}}</h5>
    <h6 class="card-title">Rs.{{this.product.Price}}</h6>
    <h6 class="card-text">Quantity:{{this.quantity}}</p>
    <h6 class="card-text">{{this.product.Description}}</p>


  </div>
</div>
</div>
            {{/each}}
        </div>
        </div>
    </section>
